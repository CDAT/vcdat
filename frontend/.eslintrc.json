{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "mocha": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:import/errors", "plugin:import/warnings"],
    "parserOptions": {
        "ecmaVersion": 2017,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
            "max-len": ["error", 150, 4],
            "spaced-comment": ["error", "always"],
            "no-console": ["error", { 
                "allow": ["warn", "error"]
            }]
    },
    "globals": {
        "vcs": true
    },
    "root": true

}
